@{
  Layout = "_Layout";
}
<h1>A Very Nice Salon and Spa</h1>
<p class="lead">Welcome to a Very Nice Salon and Spa.</p>
<h2>Stylists</h2>
@if (Model.Count == 0)
{
 <h3>No stylists in database!</h3>
 <p>Please add a stylist to begin.</p>
 <a href="/stylists/new">Add Stylist</a>
}
else
{
  <ul>
    @foreach(var stylist in Model)
    {
      <li><a href="/stylists/@stylist.Id">@stylist.Name</a></li>
    }
  </ul>
  <a href="/stylists/new">Add Stylist</a>
}
