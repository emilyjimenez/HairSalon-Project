@{
  Layout = "_Layout";
}
<h1>Add Client</h1>
<br></br>
<form action='/stylists/@Model.Id/clients/new' method="post">
  <div class="form-group">
    <label class= "client-name" for="client-name">Name:</label>
       <input type="text" class="form-control" name="client-name" id="client-name" required autofocus>
  </div>
  <div class="form-group">
    <label class= "birthday" for="birthday">Birthday:</label>
       <input type="number" class="form-control" name="birthday" id="birthday" required>
  </div>
  <div class="form-group">
    <label class= "email" for="email">Email:</label>
       <input type="text" class="form-control" name="email" id="email" required>
  </div>
  <div class="form-group">
    <button class="btn btn-info" type="submit">Submit</button>
  </div>
